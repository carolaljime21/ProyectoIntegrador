import play.api.libs.json._
import scala.util.{Failure, Success, Try}
import com.github.tototoshi.csv._
import java.io.File
import requests.Response
import scalikejdbc._
import java.nio.charset.StandardCharsets
import java.nio.file.{Files, Paths, StandardOpenOption}

object Main extends App{

  val reader = CSVReader.open(new File("C:/Users/HP/Desktop/Proyecto/movie_dataset.csv"))
  val data = reader.allWithHeaders()
  reader.close()

  case class keywords(id: Int,
                      keywords: String)

  val SQL_INSERT_PATTERN =
    """INSERT INTO KEYWORDS (`ID`, `KEYWORDS`)
      |VALUES
      |('%d', '%s');
      |""".stripMargin

  val movieKeywords = data
    .map(row => keywords(
      row("id").toInt,
      row("keywords")))

  val scriptData = movieKeywords
    .map(movie => SQL_INSERT_PATTERN.formatLocal(java.util.Locale.US,
      movie.id,
      movie.keywords
    ))

  val scriptFile = new File("C:/Users/HP/Desktop/scripts/keywords")
  if (scriptFile.exists()) scriptFile.delete()

  scriptData.foreach(insert =>
    Files.write(Paths.get("C:/Users/HP/Desktop/scripts/keywords"),
      insert.getBytes(StandardCharsets.UTF_8),
      StandardOpenOption.CREATE,
      StandardOpenOption.APPEND)
  )
}
